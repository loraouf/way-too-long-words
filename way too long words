#include <iostream>
#include<algorithm>
using namespace std;

int main(){
int n; 
string s;
cin>>n;
for(int i=0;i<n;i++){
    cin>>s;
    if(s.size()>10){
        int num=s.size()-2;
        cout<<s[0]<<num<<s[s.size()-1]<<endl;}

    else{
        cout<<s<<endl;}
    
}
    
}
